# G_ROBOT CMake config file
#
# This file sets the following variables:
# G_ROBOT_FOUND - Always TRUE.
# G_ROBOT_INCLUDE_DIRS - Directories containing the G_ROBOT include files.
# G_ROBOT_IDL_DIRS - Directories containing the G_ROBOT IDL files.
# G_ROBOT_LIBRARIES - Libraries needed to use G_ROBOT.
# G_ROBOT_DEFINITIONS - Compiler flags for G_ROBOT.
# G_ROBOT_VERSION - The version of G_ROBOT found.
# G_ROBOT_VERSION_MAJOR - The major version of G_ROBOT found.
# G_ROBOT_VERSION_MINOR - The minor version of G_ROBOT found.
# G_ROBOT_VERSION_REVISION - The revision version of G_ROBOT found.
# G_ROBOT_VERSION_CANDIDATE - The candidate version of G_ROBOT found.

message(STATUS "Found G_ROBOT-@PROJECT_VERSION@")
set(G_ROBOT_FOUND TRUE)

find_package(<dependency> REQUIRED)

#set(G_ROBOT_INCLUDE_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@"
#    ${<dependency>_INCLUDE_DIRS}
#    )
#
#set(G_ROBOT_IDL_DIRS
#    "@CMAKE_INSTALL_PREFIX@/include/@PROJECT_NAME_LOWER@-@PROJECT_VERSION_MAJOR@/idl")
set(G_ROBOT_INCLUDE_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@"
    ${<dependency>_INCLUDE_DIRS}
    )
set(G_ROBOT_IDL_DIRS
    "@CMAKE_INSTALL_PREFIX@/include/@CPACK_PACKAGE_FILE_NAME@/idl")


if(WIN32)
    set(G_ROBOT_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_STATIC_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
else(WIN32)
    set(G_ROBOT_LIBRARIES
        "@CMAKE_INSTALL_PREFIX@/@LIB_INSTALL_DIR@/@CMAKE_SHARED_LIBRARY_PREFIX@@PROJECT_NAME_LOWER@@CMAKE_SHARED_LIBRARY_SUFFIX@"
        ${<dependency>_LIBRARIES}
        )
endif(WIN32)

set(G_ROBOT_DEFINITIONS ${<dependency>_DEFINITIONS})

set(G_ROBOT_VERSION @PROJECT_VERSION@)
set(G_ROBOT_VERSION_MAJOR @PROJECT_VERSION_MAJOR@)
set(G_ROBOT_VERSION_MINOR @PROJECT_VERSION_MINOR@)
set(G_ROBOT_VERSION_REVISION @PROJECT_VERSION_REVISION@)
set(G_ROBOT_VERSION_CANDIDATE @PROJECT_VERSION_CANDIDATE@)

